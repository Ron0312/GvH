---
const { title, subtitle, ctaLabel = "Das Gespräch eröffnen", ctaLink = "/kontakt" } = Astro.props;
---

<section class="resonance-panel reveal-obs">
    <img src="/img/Wohnen-Garten-Schwimmteich-Daemmerung-Lounge-Licht-Gaerten-des-Jahres-scaled.jpg" class="resonance-bg-image" alt="" />
    <div class="resonance-content">
        <span class="text-[#D2B48C] text-[10px] uppercase tracking-[0.8em] font-black block mb-10">Concierge Dialog</span>
        <h2 class="text-4xl md:text-7xl font-serif italic mb-10">{title}</h2>
        <p class="text-xl md:text-2xl text-white/40 font-light italic leading-relaxed mb-16 max-w-2xl mx-auto">{subtitle}</p>
        <div class="magnetic-wrap">
            <a href={ctaLink}
                class="inline-block px-12 md:px-20 py-6 bg-[#D2B48C] text-black uppercase text-[11px] font-black tracking-[0.4em] hover:bg-white transition-all shadow-2xl"
            >
                {ctaLabel}
            </a>
        </div>
    </div>
</section>
