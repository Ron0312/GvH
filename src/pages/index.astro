---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Hero from '../components/Hero.astro';
import Footer from '../components/Footer.astro';
import Expertise from '../components/Expertise.astro';
import TextReveal from '../components/TextReveal.astro';
import LazyImage from '../components/LazyImage.astro';
import ResonanceCTA from '../components/ResonanceCTA.astro';
import { CONTENT } from '../data/content';
---

<Layout title="Gaerten von Hoerschelmann | Landschaftskomposition">
    <Navigation currentPath="/" />

    <main id="main-content" class="animate-in fade-in duration-700">
        <Hero />

        <section class="py-8 md:py-16 bg-white border-b border-gray-100 overflow-hidden px-6">
            <div class="max-content flex flex-wrap justify-center md:justify-around items-center gap-8 md:gap-12 opacity-40 grayscale hover:opacity-100 hover:grayscale-0 transition-all duration-1000 reveal-obs">
                <div class="flex flex-col gap-1 text-center"><span class="text-[7px] font-black uppercase tracking-widest">Auszeichnung</span><span class="font-serif italic text-xl md:text-2xl">Gärten des Jahres</span></div>
                <div class="flex flex-col gap-1 text-center"><span class="text-[7px] font-black uppercase tracking-widest">Ranking</span><span class="font-serif italic text-xl md:text-2xl">Top 100 Planer</span></div>
                <div class="flex flex-col gap-1 text-center"><span class="text-[7px] font-black uppercase tracking-widest">Region</span><span class="font-serif italic text-xl md:text-2xl">HH | Sylt | Kitzbühel</span></div>
            </div>
        </section>

        <section class="section-padding px-6 bg-white">
            <div class="max-content grid lg:grid-cols-12 gap-8 md:gap-20 items-center">
                <div class="lg:col-span-5 reveal-obs">
                    <span class="text-[#A0522D] text-[10px] uppercase tracking-[0.8em] block mb-8 font-bold italic">Genius Loci</span>
                    <h2 class="clamp-h2 font-serif italic mb-10"><TextReveal>Planung. Bau.</TextReveal><br/><TextReveal>Werterhalt.</TextReveal></h2>
                    <p class="text-lg md:text-xl text-gray-400 font-light leading-relaxed italic mb-12">Wahre Meisterschaft entsteht in der perfekten Orchestrierung von Architektur, Statik und Botanik. Wir begleiten Sie von der ersten Skizze bis zur botanischen Reife.</p>
                    <ul class="space-y-6">
                        {[
                            { id: 'vision', label: 'Landschaftsarchitektonische Vision' },
                            { id: 'handwerk', label: 'Präzises Handwerk im Gartenbau' },
                            { id: 'botanik', label: 'Botanische Kuratierung & Pflege' }
                        ].map((li, idx) => (
                            <li class="reveal-obs" style={`transition-delay: ${idx * 150}ms`}>
                                <a href="/expertise"
                                    onmouseenter="window.setCursorMode(true, 'Mehr')"
                                    onmouseleave="window.setCursorMode(false)"
                                    class="flex items-center gap-6 text-[11px] uppercase font-black tracking-widest group text-left"
                                >
                                    <span class="w-12 h-[1px] bg-gray-100 group-hover:bg-[#A0522D] transition-all group-hover:w-16"></span>
                                    <span class="group-hover:text-[#A0522D] transition-colors">{li.label}</span>
                                </a>
                            </li>
                        ))}
                    </ul>
                </div>
                <div class="lg:col-span-7 reveal-obs" onmouseenter="window.setCursorMode(true)" onmouseleave="window.setCursorMode(false)">
                    <LazyImage
                        src="/img/Schrittplatten-Wasservorhang-rote-Waende-Holzdeck-Pergola-Aussenkueche-Wasserbecken-Liegen-Rasen-Schaugarten-scaled.jpg"
                        aspect="aspect-[4/5] lg:aspect-[16/10]"
                        autoColor={true}
                        className="shadow-premium rounded-sm group hover:scale-[1.02] transition-transform duration-1000"
                        alt="Exklusive Gartenkomposition"
                    />
                </div>
            </div>
        </section>

        <ResonanceCTA
            title="Den ersten Takt setzen"
            subtitle="Ein Garten von Sören von Hoerschelmann beginnt immer mit einem persönlichen Dialog über Visionen und Werte. Lassen Sie uns Ihre Möglichkeiten erkunden."
            ctaLink="/kontakt"
        />

        <section class="section-padding px-6 bg-white border-t border-gray-50">
            <div class="max-content">
                <div class="grid md:grid-cols-3 gap-12 lg:gap-24">
                    {CONTENT.maximes.map((maxime, i) => (
                        <div class="space-y-6 reveal-obs" style={`transition-delay: ${i * 100}ms`}>
                            <span class="text-[#A0522D] text-[9px] uppercase tracking-[0.4em] font-black">Maxime {i + 1}</span>
                            <h3 class="text-3xl font-serif italic">{maxime.label}</h3>
                            <p class="text-gray-400 font-light italic leading-relaxed text-lg">{maxime.desc}</p>
                            <div class="w-10 h-[1px] bg-gray-100"></div>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <section class="section-padding px-6 bg-[#FDFCFB]">
            <div class="max-content grid md:grid-cols-2 gap-12 lg:gap-20">
                {CONTENT.testimonials.map((t, i) => (
                    <blockquote class="space-y-10 p-10 md:p-16 border border-gray-100 bg-white shadow-sm reveal-obs">
                        <p class="text-2xl md:text-3xl leading-relaxed font-light italic text-gray-500">„{t.text}“</p>
                        <footer class="flex justify-between items-end pt-10 border-t border-gray-100">
                            <div class="flex items-center gap-6">
                                <div class="w-12 h-[1px] bg-[#A0522D]"></div>
                                <cite class="text-[10px] uppercase tracking-widest font-black text-[#1A1A1A] not-italic">{t.author}</cite>
                            </div>
                            <span class="text-[9px] text-gray-300 font-bold uppercase tracking-widest">{t.year}</span>
                        </footer>
                    </blockquote>
                ))}
            </div>
        </section>
    </main>

    <Footer />
</Layout>
