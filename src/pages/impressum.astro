---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Impressum | Gaerten von Hoerschelmann">
    <Navigation currentPath="/impressum" />

    <main class="pt-20">
        <section class="section-padding px-6 animate-in fade-in">
            <div class="max-content text-left">
                <h2 class="text-5xl font-serif italic mb-20 border-b border-gray-100 pb-12">Impressum</h2>
                <div class="space-y-20 text-lg text-gray-500 italic font-light leading-relaxed">
                    <article>
                        <h3 class="text-[10px] uppercase font-black text-[#A0522D] mb-8 tracking-[0.4em]">Angaben gemäß § 5 TMG</h3>
                        <p class="not-italic text-[#1A1A1A]">Gaerten von Hoerschelmann GmbH | Hartwigsahl 15 | 23863 Bargfeld-Stegen</p>
                    </article>
                    <article>
                        <h3 class="text-[10px] uppercase font-black text-[#A0522D] mb-8 tracking-[0.4em]">Registereintrag</h3>
                        <p class="not-italic text-[#1A1A1A]">HRB 9343 | Registergericht: Lübeck</p>
                    </article>
                    <article>
                        <h3 class="text-[10px] uppercase font-black text-[#A0522D] mb-8 tracking-[0.4em]">Kontakt</h3>
                        <p class="not-italic text-[#1A1A1A]">Telefon: 04532 288 24 42 | <a href="mailto:post@gaertenvonhoerschelmann.de" class="underline underline-offset-4 decoration-[#A0522D]/30 hover:decoration-[#A0522D] transition-all">post@gaertenvonhoerschelmann.de</a></p>
                    </article>
                </div>
            </div>
        </section>
    </main>
    <Footer />
</Layout>
